@page
@model DetailsCompteModel
@{
    ViewData["Title"] = "Détails du compte";
}
<!DOCTYPE html>
<html lang="fr">

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
</head>

<body>
    <div class="container py-4">
        <h2 class="text-primary fw-bold">Détails du compte</h2>

        @if (Model.Compte == null)
        {
            <form method="post">
                <div class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label">Numéro du compte</label>
                        <input type="text" class="form-control" asp-for="NumeroCompte" required
                            placeholder="Ex: C00123456" />
                    </div>
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary mt-3">OK</button>
                    </div>
                </div>
            </form>
        }
        else
        {
            <div class="row g-4">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light">
                            <h5>Informations du compte</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>N° Compte :</strong> @Model.Compte.Numero</p>
                            <p><strong>Titulaire :</strong> @Model.Compte.Titulaire</p>
                            <p><strong>Type :</strong> <span class="badge bg-primary">@Model.Compte.Type</span></p>
                            <p><strong>Solde actuel :</strong> <strong class="text-success">@Model.Compte.Solde:N0
                                    FCFA</strong></p>
                            <p><strong>Date de création :</strong> @Model.Compte.DateCreation:dd/MM/yyyy</p>
                            <p><strong>Statut :</strong> Bloqué (30j)</p>
                            <p><strong>Date de déblocage :</strong> 15/04/2023</p>
                        </div>
                    </div>
                    <div class="card shadow-sm mt-3">
                        <div class="card-header bg-light">
                            <h5>Statistiques</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Total des dépôts :</strong> <span class="text-success">@Model.TotalDepots:N0
                                    FCFA</span></p>
                            <p><strong>Total des retraits :</strong> <span class="text-danger">@Model.TotalRetraits:N0
                                    FCFA</span></p>
                            <p><strong>Nombre de transactions :</strong> @Model.NombreTransactions</p>
                            <p><strong>Dernière transaction :</strong> @Model.DerniereTransaction</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light d-flex justify-content-between align-items-center">
                            <h5 class="m-0">Historique des transactions</h5>

                            <form method="get" class="m-0">
                                <input type="hidden" name="numeroCompte" value="@Model.Compte.Numero" />
                                <input type="hidden" name="page" value="@Model.PageActuelle" />
                                <select name="typeFilter" class="form-select form-select-sm w-auto"
                                    onchange="this.form.submit()">
                                    <option value="">Tous</option>
                                    <option value="Dépôt" selected="@(Model.TypeFilter == "Dépôt")">Dépôt</option>
                                    <option value="Retrait" selected="@(Model.TypeFilter == "Retrait")">Retrait</option>
                                </select>
                            </form>
                        </div>

                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th>Montant</th>
                                            <th>Solde après</th>
                                            <th>Description</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var t in Model.TransactionsPage)
                                        {
                                            <tr>
                                                <td>@Model.Compte.Transactions.IndexOf(t)</td>
                                                <td>@t.Date:dd/MM/yyyy</td>
                                                <td><span
                                                        class="badge @(t.Type == "Dépôt" ? "bg-success" : "bg-danger")">@t.Type</span>
                                                </td>
                                                <td>@t.Montant:N0 FCFA</td>
                                                <td>@t.SoldeApres:N0 FCFA</td>
                                                <td>@t.Description</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <nav>
                                <ul class="pagination justify-content-center">
                                    @for (int p = 1; p <= Model.TotalPages; p++)
                                    {
                                        <li class="page-item @(p == Model.PageActuelle ? "active" : "")">
                                            <a class="page-link"
                                                href="?numeroCompte=@Model.Compte.Numero&page=@p&typeFilter=@Model.TypeFilter">
                                                @p
                                            </a>
                                        </li>
                                    }
                                </ul>

                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>

</html>